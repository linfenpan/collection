<script>
    var APP = {
        pt: document.getElementById("container"),
        max: <%= max %>,
        index: 0,
        go: function(index){
            if(index > this.max){
                index = this.max;
            }else if(index < 0){
                index = 0;
            }
            this.index = index;

            var pt = this.pt;
            pt.className = "<%=prefix %>" + index;
        },
        next: function(){
            this.go(this.index + 1);
        },
        prev: function(){
            this.go(this.index - 1);
        }
    };
</script>
